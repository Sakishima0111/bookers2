<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %><br>
          <label for="inputImage">ProfileImage</label><br>
          <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %><br>
          <label for="inputBody">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",class: "form-control"%><br>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>