<div>
    <% flash.each do |message_type, message| %>
      <div class="flash-message<%= message_type %>"><%= message %></div>
    <% end %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

      <h2>User info</h2>
      <table class= "table">
        <tbody>
          <!--ここにプロフィール画像-->
          <tr></tr>
          <tr>
            <th>name</th>
